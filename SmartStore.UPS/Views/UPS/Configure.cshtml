@using SmartStore.Web.Framework;
@model SmartStore.UPS.Models.UPSModel
@{
    Layout = "";
}

<div class="plugin-actions">
	<button id="SaveConfigButton" type="submit" name="save" class="btn btn-warning" value="save">
		<i class="fa fa-check"></i>
		<span>@T("Admin.Common.Save")</span>
	</button>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <table class="adminContent">
        <tr>
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.Url)
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.Url)
                @Html.ValidationMessageFor(model => model.Url)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.AccessKey)
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.AccessKey)
                @Html.ValidationMessageFor(model => model.AccessKey)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.Username)
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.Username)
                @Html.ValidationMessageFor(model => model.Username)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.Password)
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { autocomplete = "new-password", value = Model.Password } })
                @Html.ValidationMessageFor(model => model.Password)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.CustomerClassification)
            </td>
            <td class="adminData">
                @Html.DropDownListFor(model => model.CustomerClassification, Model.AvailableCustomerClassifications)
                @Html.ValidationMessageFor(model => model.CustomerClassification)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.PickupType)
            </td>
            <td class="adminData">
                @Html.DropDownListFor(model => model.PickupType, Model.AvailablePickupTypes)
                @Html.ValidationMessageFor(model => model.PickupType)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.PackagingType)
            </td>
            <td class="adminData">
                @Html.DropDownListFor(model => model.PackagingType, Model.AvailablePackagingTypes)
                @Html.ValidationMessageFor(model => model.PackagingType)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.InsurePackage)
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.InsurePackage)
                @Html.ValidationMessageFor(model => model.InsurePackage)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.AdditionalHandlingCharge)
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.AdditionalHandlingCharge, new { postfix = Model.PrimaryStoreCurrencyCode })
                @Html.ValidationMessageFor(model => model.AdditionalHandlingCharge)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.DefaultShippedFromCountryId)
            </td>
            <td class="adminData">
                @Html.DropDownListFor(model => model.DefaultShippedFromCountryId, Model.AvailableCountries)
                @Html.ValidationMessageFor(model => model.DefaultShippedFromCountryId)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.DefaultShippedFromZipPostalCode)
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.DefaultShippedFromZipPostalCode)
                @Html.ValidationMessageFor(model => model.DefaultShippedFromZipPostalCode)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.AvailableCarrierServices)
            </td>
            <td class="adminData">
				<div style="height: 250px;overflow: auto;" class="card p-3">
					@foreach (var csd in Model.AvailableCarrierServices)
					{
						<div class="form-check">
							<input class="form-check-input" type="checkbox" name="CheckedCarrierServices" value="@(csd)" @(Model.CarrierServicesOffered.Contains(csd) ? Html.Raw(" checked=\"checked\"") : null) />
							<label class="form-check-label">@csd</label>
						</div>
					}
				</div>

            </td>
        </tr>
    </table>    
}