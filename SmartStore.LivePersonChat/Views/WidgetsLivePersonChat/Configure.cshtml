@using SmartStore.Web.Framework;
@model SmartStore.LivePersonChat.Models.ConfigurationModel
@{
    Layout = "";
}

<div class="plugin-actions">
	<button id="SaveConfigButton" type="submit" name="save" class="btn btn-warning" value="save">
		<i class="fa fa-check"></i>
		<span>@T("Admin.Common.Save")</span>
	</button>
</div>
	
@using (Html.BeginForm())
{    
	@Html.AntiForgeryToken()

    <div class="alert alert-info">
        @Html.Raw(@T("Plugins.Widgets.LivePersonChat.AdminInstruction"))
    </div>
    
	<table class="adminContent">
		<tr>
			<td class="adminTitle">
				@Html.SmartLabelFor(model => model.MonitoringCode)
			</td>
			<td class="adminData">
				@Html.TextAreaFor(model => model.MonitoringCode, new { rows = 10 })
				@Html.ValidationMessageFor(model => model.MonitoringCode)
			</td>
		</tr>
	</table>
}